<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blueredbg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:src="@drawable/johormap2" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Cities"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/tangkak"
            android:layout_width="289dp"
            android:layout_height="144dp"
            android:layout_gravity="center"
            android:src="@drawable/aa_tangkak" />

        <ImageButton
            android:id="@+id/segamat"
            android:layout_width="290dp"
            android:layout_height="149dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_segamat" />

        <ImageButton
            android:id="@+id/kluang"
            android:layout_width="289dp"
            android:layout_height="183dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_kluang" />

        <ImageButton
            android:id="@+id/mersing"
            android:layout_width="292dp"
            android:layout_height="154dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_mersing" />

        <ImageButton
            android:id="@+id/kotatinggi"
            android:layout_width="291dp"
            android:layout_height="160dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_kotatinggi" />

        <ImageButton
            android:id="@+id/kulai"
            android:layout_width="290dp"
            android:layout_height="158dp"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/aa_kulai" />

        <ImageButton
            android:id="@+id/pontian"
            android:layout_width="290dp"
            android:layout_height="148dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_pontian" />

        <ImageButton
            android:id="@+id/muar"
            android:layout_width="288dp"
            android:layout_height="139dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_muar" />

        <ImageButton
            android:id="@+id/jb"
            android:layout_width="291dp"
            android:layout_height="151dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_johorbahru" />

        <ImageButton
            android:id="@+id/bp"
            android:layout_width="289dp"
            android:layout_height="140dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/aa_batupahat" />

    </LinearLayout>
</ScrollView>
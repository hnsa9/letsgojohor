<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueredbg"
    tools:context=".TravelTipsActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="63dp"
        android:text="Category"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/general"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/general"
        android:layout_width="224dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"

        android:background="@drawable/mybutton"
        android:gravity="center"
        android:text="GENERAL"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/planning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/planning"
        android:layout_width="224dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"

        android:background="@drawable/mybutton"
        android:gravity="center"
        android:text="PLANNING"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/general" />

    <Button
        android:id="@+id/culture"
        android:layout_width="223dp"
        android:layout_height="0dp"
        android:layout_marginBottom="232dp"

        android:background="@drawable/mybutton"
        android:gravity="center"
        android:text="CULTURE"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language" />

    <Button
        android:id="@+id/language"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"

        android:background="@drawable/mybutton"
        android:gravity="center"
        android:text="LANGUAGE"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/culture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planning" />

</androidx.constraintlayout.widget.ConstraintLayout>